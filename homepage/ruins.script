let aligned = false;

document.body.addEventListener("click", () => {
  aligned = !aligned;

  const layers = document.querySelectorAll(".layer");

  layers.forEach(layer => {
    if(aligned){
      layer.style.transform = "rotate(0deg)";
      layer.style.opacity = "1";
    } else {
      layer.style.transform = "";
      layer.style.opacity = ".85";
    }
  });
});
